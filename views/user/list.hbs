<h3><a class="btn btn-success" href="/user/addOrEdit"><i class="fa fa-plus"></i> Create New</a> User List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#if list}}
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>
                {{#if this.image}}
                <img src="/uploads/{{this.image}}" width="100" height="100" style="object-fit: contain;">
                {{/if}}
            </td>
            <td>
                <a href="/user/details/{{this._id}}" title="View Details"><i class="fa fa-eye fa-lg"></i></a>
                <a href="/user/{{this._id}}" title="Edit"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/user/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"
                    title="Delete"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>

        {{/each}}
        {{else}}
        <tr><td colspan="4">Data not found.</td></tr>
        {{/if}}
    </tbody>
</table>