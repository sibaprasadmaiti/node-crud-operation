<h3><a class="btn btn-secondary" href="/user"><i class="fa fa-list-alt"></i> View All</a> User Details</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{list.name}}</td>
            <td>{{list.email}}</td>
            <td>{{list.mobile}}</td>
            <td>{{list.city}}</td>
            <td>
                {{#if list.image}}
                <img src="/uploads/{{list.image}}" width="100" height="100" style="object-fit: contain;">
                {{/if}}
            </td>
        </tr>
    </tbody>
</table>